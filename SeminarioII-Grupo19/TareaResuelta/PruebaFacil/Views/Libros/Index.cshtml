
@{
    ViewData["Title"] = "Index";
}

@model List<Libro>

<h1>Lista de Libros</h1>

<a asp-action="Crear">Agregar Nuevo Libro</a>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>TÃ­tulo</th>
            <th>Autor</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var libro in Model)
        {
            <tr>
                <td>@libro.Id</td>
                <td>@libro.Titulo</td>
                <td>@libro.Autor</td>
